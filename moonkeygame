<style>
  body {
    font-family: Arial, sans-serif;
  }
  #game-container {
    width: 400px;
    margin: 0 auto;
    text-align: center;
  }
  .monkey {
    width: 50px;
    height: 50px;
    background-color: #FFD700;
    border-radius: 50%;
    display: inline-block;
    margin: 10px;
    cursor: pointer;
  }
